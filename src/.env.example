# Пример файла переменных окружения
# Скопируйте как .env и укажите свои значения

APP_NAME="Narrativ"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Europe/Moscow
APP_URL=http://localhost

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=narrativ
DB_USERNAME=root
DB_PASSWORD=

# Cache & Sessions
CACHE_DRIVER=redis
SESSION_DRIVER=redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Queue
QUEUE_CONNECTION=redis

# Mail
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Telegram Notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# reCAPTCHA (Google)
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# hCaptcha
HCAPTCHA_SITE_KEY=
HCAPTCHA_SECRET_KEY=

# CAPTCHA Configuration
CAPTCHA_VERIFY_TIMEOUT=10

# Google Analytics
GOOGLE_ANALYTICS_ID=

# Yandex Metrica
YANDEX_METRICA_ID=

# Scout Search
SCOUT_DRIVER=meilisearch
MEILISEARCH_HOST=http://127.0.0.1:7700
MEILISEARCH_KEY=

# File Storage
FILESYSTEM_DISK=local

# Debug
DEBUGBAR_ENABLED=false
